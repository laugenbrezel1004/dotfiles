# BEGIN_KITTY_THEME
# 1984 Light
include current-theme.conf
# END_KITTY_THEME
#

font_family CaskaydiaCove Nerd Font Mono
bold_font        auto
italic_font      auto
bold_italic_font auto

font_size 14

background_opacity 0.7
# HHKB-Specific Key Mappings
# Fix the Top-Right 'Delete' key (which is Backspace)
map shift+delete send_text all \x17
map kitty_mod+delete send_text all \x17

# Ensure Backspace sends the correct signal (ASCII 127)
map ctrl+shift+h send_text all \x7f

# (Optional) Map Fn+Delete (Forward Delete) if desired
map kitty_mod+shift+delete send_text all \e[3~
